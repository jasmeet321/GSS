@model GSS.Models.Models.GalleryModel
@{
    ViewBag.Title = "Gallery";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script type="text/javascript">
    check_page(3);
</script>



<div class="box">
    <div class="box-head">
        <h2>Add New Image</h2>
    </div>
    <div class="form">
        @using (Html.BeginForm("AddGallery", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "myform" }))
        {

            @Html.AntiForgeryToken()
            <p>
                <label>Title<span>(Required Field)</span></label>
                @Html.TextBoxFor(d => d.Title, new { @class = "field size1" })
                @Html.ValidationMessageFor(model => model.Title, "", new { @class = "errors" })
            </p>



            <p>

                <label>Image Name<span>(Required Field)</span></label>
                @Html.TextBoxFor(d => d.ImageName, new { @class = "field size1" })
                @Html.ValidationMessageFor(model => model.ImageName, "", new { @class = "errors" })
            </p>
            if (Model == null)
            {

                <p>

                    <label>Banner Image<span></span></label>

                    @Html.CheckBoxFor(d => d.IsBannerImage, new { @class = "" })

                </p>
            }
            else
            {
                @Html.HiddenFor(d => d.IsBannerImage)
            }

            <p>
                <label>Upload Image<span>(Required Field)</span></label>
                @Html.TextBoxFor(d => d.ImagePath, new { @class = "field size1 file_1", type = "file" })
                @if (Model != null)
                {
                    @Html.HiddenFor(d => d.ImagePath)
                }
                @if (ViewBag.message != "")
                {
                    <span class="errors"> @ViewBag.message</span>
                }
                else
                {
                    @Html.ValidationMessageFor(model => model.ImagePath, "", new { @class = "errors" })
                }

            </p>

            <p>
                <label>Description<span></span></label>
                @Html.TextBoxFor(d => d.Description, new { @class = "field size1" })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "errors" })
            </p>

            <p>
                <input type="submit" value="Submit" class="button" />
            </p>

        }
    </div>



</div>
