@model GSS.Models.Models.SubscriptionModel
@{

    ViewBag.Title = "Manage Subscription";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script type="text/javascript">
    check_page(8);
</script>

<div class="box">
    <div class="box-head">
        <h2>Edit Subscription</h2>
    </div>
    <div class="form">

        @using (Html.BeginForm("ManageSubscription", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "myform" }))
        {

            @Html.AntiForgeryToken()
        
            <p>
                <label>Is Subscribed</label>
                @Html.CheckBoxFor(d => d.IsSubscribed, new { @class = ""})
                @Html.ValidationMessageFor(model => model.IsSubscribed, "", new { @class = "errors" })
            </p>
                
            <p>

                <label>First Name<span>(Required Field)</span></label>
                @Html.TextBoxFor(d => d.FirstName, new { @class = "field size1" })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "errors" })
            </p>

            <p>
                <label>Last Name<span>(Required Field)</span></label>
                @Html.TextBoxFor(d => d.LastName, new { @class = "field size1" })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "errors" })
            </p>

           
            <p>
                <label>Phone<span>(Required Field)</span></label>
                @Html.TextBoxFor(d => d.ContactNumber, new { @class = "field size1" })
                @Html.ValidationMessageFor(model => model.ContactNumber, "", new { @class = "errors" })
            </p>

            <p>
                <label>Email Address</label>
                @Html.TextBoxFor(d => d.EmailAddress, new { @class = "field size1" })
                @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "errors" })


            </p>

            <p>
                <label>Address</label>
                @Html.TextAreaFor(d => d.Address, new { @class = "field size1", @cols = 30, @rows = 10 })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "errors" })
            </p>

          
            
            <p>
                <input type="submit" value="Submit" class="button" />
            </p>

        }
    </div>
</div>
