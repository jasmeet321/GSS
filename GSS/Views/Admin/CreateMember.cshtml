@model GSS.Models.Models.CommitteMemberModel
@{

    ViewBag.Title = "Create Member";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script type="text/javascript">
    check_page(6);
</script>

<div class="box">
    <div class="box-head">
        <h2>Add New Member</h2>
    </div>
    <div class="form">

        @using (Html.BeginForm("CreateMember", "Admin", FormMethod.Post, new { enctype = "multipart/form-data", id = "myform" }))
        {

            @Html.AntiForgeryToken()
           
            <p>

                <label>Select Committee's<span>(Required Field)</span></label>
                @Html.ListBoxFor(d => d.CommitteeIds, new SelectList(ViewBag.list, "Value", "Text"), new { @class = "field size1", @size=6, @stye="width:350px;",  @multiple = "multiple", @id = "form-field-select-2" })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "errors" })
            </p>
                
            <p>

                <label>First Name<span>(Required Field)</span></label>
                @Html.TextBoxFor(d => d.FirstName, new { @class = "field size1" })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "errors" })
            </p>

            <p>
                <label>Last Name<span>(Required Field)</span></label>
                @Html.TextBoxFor(d => d.LastName, new { @class = "field size1" })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "errors" })
            </p>

            <p>
                <label>Middle Name<span></span></label>
                @Html.TextBoxFor(d => d.MiddleName, new { @class = "field size1" })
                @Html.ValidationMessageFor(model => model.MiddleName, "", new { @class = "errors" })
            </p>
            <p>
                <label>Phone<span>(Required Field)</span></label>
                @Html.TextBoxFor(d => d.ContactNumber, new { @class = "field size1" })
                @Html.ValidationMessageFor(model => model.ContactNumber, "", new { @class = "errors" })
            </p>

            <p>
                <label>Email Address</label>
                @Html.TextBoxFor(d => d.EmailAddress, new { @class = "field size1" })
                @Html.ValidationMessageFor(model => model.EmailAddress, "", new { @class = "errors" })


            </p>

            <p>
                <label>Address</label>
                @Html.TextAreaFor(d => d.Address, new { @class = "field size1", @cols = 30, @rows = 10 })
                @Html.ValidationMessageFor(model => model.Address, "", new { @class = "errors" })
            </p>

            <p>
                <label>Zip Code<span></span></label>
                @Html.TextBoxFor(d => d.Zip, new { @class = "field size1" })
                @Html.ValidationMessageFor(model => model.Zip, "", new { @class = "errors" })
            </p>

            <p>
                <label>City<span></span></label>
                @Html.TextBoxFor(d => d.City, new { @class = "field size1" })
                @Html.ValidationMessageFor(model => model.City, "", new { @class = "errors" })
            </p>
            
            <p>
                <label>State<span></span></label>
                @Html.TextBoxFor(d => d.State, new { @class = "field size1" })
                @Html.ValidationMessageFor(model => model.State, "", new { @class = "errors" })
            </p>
            
            <p>
                <input type="submit" value="Submit" class="button" />
            </p>

        }
    </div>
</div>
