@model GSS.Models.Models.NewsEventsModel
@{
    ViewBag.Title = "EventsDetails";
    Layout = "~/Views/Shared/_Frontendlayout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12 animated" data-animtype="fadeInUp"
         data-animrepeat="0"
         data-speed="1s"
         data-delay="0.4s">
        <h2 class="h2-section-title"><b>@Model.HeadLine</b></h2>
        <div class="i-section-title">

        </div>
        <h3 class="h3-section-info">
            <b>Place of event :</b> @Model.PlaceofEvent
        </h3>
    </div>
</div>

<div class="section-content bottom-body">
    <div class="space-sep20"></div>
    <div class="row">
        <div class="col-md-12 col-sm-12">
            <p style="text-align: justify">
                <span class="dropcaps dropcaps-color-style">@Model.EventDate.ToString("dddd, MMMM-dd-yyyy")</span><br />
            </p>
            <p>
                <br /><br />
            </p>
        </div>
    </div>

    <div class="row">
        <p>
            @Html.Raw(Model.Description)
        </p>
    </div>

    <div class="row">
        <div class="clearfix"></div>
        <div class="clearfix"></div>
        <div class="portfolio-items portfolio-items-cols3">
            @if (Model.Images != null && Model.Images.Any())
            {
                foreach (var items in Model.Images)
                {
            <div class="thumb-label-item branding">

                <div class="img-overlay thumb-label-item-img">
                    <img style="height: 170px;" src="~/@items.ImagePath" alt="" />

                    <div class="item-img-overlay">
                        <a class="portfolio-zoom fa fa-plus" href="~/@items.ImagePath"
                           data-rel="prettyPhoto[portfolio]" title="@items.EventName"></a>
                        <div class="item_img_overlay_content">
                            <h3 class="thumb-label-item-title">
                                <a href="~/@items.ImagePath"> @Model.HeadLine </a>
                            </h3>
                        </div>

                    </div>
                </div>
            </div>
                }
            }
        </div>
    </div>
</div>
