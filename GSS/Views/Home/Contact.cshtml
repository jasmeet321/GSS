@using GSS.Common
@model GSS.Models.Models.OnlineEnquiryModel
@{
    ViewBag.Title = "Contact Us";
    Layout = "~/Views/Shared/_Frontendlayout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-sm-12 animated" data-animtype="fadeInUp"
        data-animrepeat="0"
        data-speed="1s"
        data-delay="0.4s">
        <h2 class="h2-section-title">Contact Us</h2>
        <div class="i-section-title"></div>

    </div>
</div>
@*@HttpContext.Current.Request.Url.Host*@


<div class="row">
    <div class="col-md-8 col-sm-8" >
        <div class="contact-body well">
            <h3 class="h3-body-title">
                Leave A Message
            </h3>
            <p class="body_paragraph contact-paragraph">
                Please fill up the following information and your important feedback which will help us make this website better.
                We welcome all the feedback. Please fill out the form below and click on the submit button in order to contact us.
                This contact form is for website purpose only. For any issues related to the Gurdwara, please contact gurdwara office.
                Please provide a valid email address so we can contact you if needed.



            </p>
        </div>

        <div class="contact-body well" style="margin-top:10px;">
            @using (Html.BeginForm("SendMail", "Home", FormMethod.Post, new { @id = "contact-form" }))
            {


                <h2>Online Enquiry Form</h2>

                if ((TempData["Message"] != ""))
                {

                    <p id="messagedata" class="body_paragraph contact-paragraph" style="color: red">

                        @TempData["Message"]
                    </p>

                    <br />

                }
                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12">
                            <label for="name">
                                Name *
                            </label>
                            @Html.TextBoxFor(a => a.Name, new { @placeholder = "Your Name", @name = "name", @class = "form-control" })
                            @Html.ValidationMessageFor(a => a.Name, "", new { @class = "errorvalid" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12">
                            <label for="email">
                                Email *
                            </label>
                            @Html.TextBoxFor(a => a.Email, new { @placeholder = "Your Email", @name = "email", @class = "form-control" })
                            @Html.ValidationMessageFor(a => a.Email, "", new { @class = "errorvalid" })
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12">
                            <label for="message">
                                Contact
                            </label>

                            @Html.TextBoxFor(a => a.Phone, new { @placeholder = "Your Phone", @name = "phone", @class = "form-control" })
                            @Html.ValidationMessageFor(a => a.Phone, "", new { @class = "errorvalid" })
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-xs-12">
                            <label for="message&quot;">
                                Query/Feedback *
                            </label>
                            @Html.TextAreaFor(a => a.Query, new { @placeholder = "Your Query", @name = "query", @class = "form-control", @rows = 5 })
                            @Html.ValidationMessageFor(a => a.Query, "", new { @class = "errorvalid" })
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 col-sm-12 text-center">
                        <input type="submit" class="btn btn-blue no-padding" value="Submit">
                    </div>
                </div>
            }
        </div>
    </div>
    <div class="col-md-4 col-sm-4">
        <div class="sidebar well no-padding">

            <div class="sidebar-block">
                <h3 class="h3-sidebar-title">Contact Us
                </h3>
                <p>
                    <strong>@SessionManager.ContactUsinfo.BrachName </strong>

                </p>
                <div class="sidebar-icon-item">
                    <i class="icon-phone"></i>@SessionManager.ContactUsinfo.Phone
                </div>
                <div class="sidebar-icon-item">
                    <i class="icon-email"></i>@SessionManager.ContactUsinfo.Email
                </div>
                <div class="sidebar-icon-item">
                    <i class="icon-home"></i>@SessionManager.ContactUsinfo.Address, @SessionManager.ContactUsinfo.City, @SessionManager.ContactUsinfo.State
                </div>
            </div>

            <div class="space-sep20"></div>
            <div class="sidebar-block ">

                <div class="social-icons">
                    <ul>

                        <li>
                            <a class="social-media-icon googleplus-icon" target="_blank" title="googleplus" href="#">googleplus</a>
                        </li>

                        <li>
                            <a class="social-media-icon youtube-icon" target="_blank" title="youtube" href="#">youtube</a>
                        </li>

                        <li>
                            <a class="social-media-icon facebook-icon" target="_blank" title="facebook" href="#">facebook</a>
                        </li>
                        @*<li>
                            <a class="social-media-icon paypal-icon" target="_blank" title="paypal" href="#">paypal</a>
                        </li>*@

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
