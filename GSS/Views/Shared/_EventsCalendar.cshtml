@using GSS.Common
<div class="section-content section-px stones-bg ">
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-sm-4 animated" data-animtype="fadeInUp"
                 data-animrepeat="0"
                 data-speed="1s"
                 data-delay="0.4s">
                <div class="responsive-calendar well">
                    <div class="controls">
                        <a class="pull-left" data-go="prev">
                            <div class="btn btn-primary orange-btn"><i class="fa fa-backward"></i></div>
                        </a>
                        <h4><span data-head-year></span><span data-head-month></span></h4>
                        <a class="pull-right" data-go="next">
                            <div class="btn btn-primary orange-btn"><i class="fa fa-forward"></i></div>
                        </a>
                    </div>
                    <hr />
                    <div class="day-headers">
                        <div class="day header">Mon</div>
                        <div class="day header">Tue</div>
                        <div class="day header">Wed</div>
                        <div class="day header">Thu</div>
                        <div class="day header">Fri</div>
                        <div class="day header">Sat</div>
                        <div class="day header">Sun</div>
                    </div>
                    <div class="days" data-group="days">
                    </div>
                </div>

            </div>
            <div class="col-md-8 col-sm-8 animated" data-animtype="fadeInUp"
                 data-animrepeat="0"
                 data-speed="1s"
                 data-delay="0.4s" id="data-show">
                <div id="eventdate" class="callout-box clearfix well">

                    @if (SessionManager.NewsEvents != null)
                    {
                        @Html.ActionLink("More Details....", "EventsDetails", new { id = SessionManager.NewsEvents.Id.ToString() }, new { @class = "btn btn-lg" })

                        <div class="callout-content">
                            <h4>@SessionManager.NewsEvents.HeadLine (@SessionManager.NewsEvents.EventDate.ToString("dddd-dd/MMM/yyyy"))</h4>
                            <p>@Html.Raw(SessionManager.NewsEvents.Description)</p>
                        </div>
                    }
                    else
                    {
                        <div class="callout-content">
                            <p>No event found yet</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<div class="testimonial-big">
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-sm-10">
                <div data-delay="0s" data-speed="1s" data-animrepeat="1" data-animtype="fadeInRight" class="testimonial-big-text animated fadeInRight animatedVisi" style="">
                    Please download the membership form, fill it and bring it to the Gurdwara Office.
                    Contact Gurdwara Office for any additional questions
                </div>
            </div>
            <div class="col-md-2 col-sm-2">
                <div data-delay="0s" data-speed="1s" data-animrepeat="1" data-animtype="fadeInLeft" class="testimonial-big-img animated fadeInLeft animatedVisi" style="">
                    <img alt="" src="~/FrontendSection/media/testimonial-sikh.png">
                </div>
            </div>
        </div>
    </div>
</div>